#!/bin/bash

BIN=/usr/bin/chromium

# Cleanup
if ! pgrep chromium > /dev/null;then
  rm -f $HOME/.config/chromium/Singleton*
fi
proxy_server=""
if [[ -n "$HTTP_PROXY" ]]; then
  proxy_server="$HTTP_PROXY"
elif [[ -n "$HTTPS_PROXY" ]]; then
  proxy_server="$HTTPS_PROXY"
fi
# 如果检测到代理，提取代理地址并构造启动参数
proxy_arg=""
auth-server-whitelist=""
if [[ -n "$proxy_server" ]]; then
  # 提取代理地址（去掉用户名密码部分）
  proxy_host=$(echo "$proxy_server" | sed -E 's|https?://([^:@]+:[^:@]+@)?||' | sed -E 's|/.*$||')
  proxy_host_no_port=$(echo "$proxy_host" | sed -E 's|:.*$||')  # 去掉端口号
  proxy_arg="--proxy-server=http://$proxy_host"
  auth-server-whitelist="--auth-server-whitelist=$proxy_host_no_port"
  echo "Detected proxy: $proxy_host"
  echo "Detected auth-server-whitelist: $auth-server-whitelist"
fi
# Run normally on privved containers or modified un non priv
if grep -q 'Seccomp:.0' /proc/1/status; then
  ${BIN} \
  --ignore-gpu-blocklist \
  --no-first-run \
  --password-store=basic \
  --simulate-outdated-no-au='Tue, 31 Dec 2099 23:59:59 GMT' \
  --start-maximized \
  --user-data-dir \
  $proxy_arg \
  $auth-server-whitelist \
  "$@" > /dev/null 2>&1
else
  ${BIN} \
  --ignore-gpu-blocklist \
  --no-first-run \
  --no-sandbox \
  --password-store=basic \
  --simulate-outdated-no-au='Tue, 31 Dec 2099 23:59:59 GMT' \
  --start-maximized \
  --test-type \
  --user-data-dir \
  $proxy_arg \
  $auth-server-whitelist \
  "$@" > /dev/null 2>&1
fi
